<h1>Counter</h1>

<p>
 Current count: @CurrentCount
</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {

 [Parameter]
 public int CurrentCount { get; set; } = 0;

 [Parameter]
 public int Increment { get; set; } = 1;

 void IncrementCount()
 {
  CurrentCount += Increment;
 }
}