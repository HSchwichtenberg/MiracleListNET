<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiracleList_MAUI.Views.CategoriesPage"
             Title="CategoriesPage">
    <Grid RowDefinitions="auto, auto, *, auto">
        <Label x:Name="HeaderLabel"/>
        <Entry Grid.Row="1" Placeholder="Neue Kategorie ..."/>
        <CollectionView x:Name="CategoriesCollectionView" Grid.Row="2">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="*, auto">
                        <Label Text="{Binding Name}"/>
                        <Label Grid.Column="1" Text="X"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Entry Grid.Row="3" Placeholder="Suche ..."/>
    </Grid>
</ContentPage>