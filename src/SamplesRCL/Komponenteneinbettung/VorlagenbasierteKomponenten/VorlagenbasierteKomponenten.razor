@page "/Samples/VorlagenbasierteKomponenten"
@using ITVisions.Blazor
@using ITVisions.Blazor.Controls
@inject BlazorUtil Util

<h1>Vorlagenbasierte Komponentenvorlagen</h1>

<h3>ITVButton (vorlagenbasiert + AdditionalAttributes)</h3>

<ITVButton onClick="Aktion" AnimationSeconds="1" class="btn btn-success" title="mit Animation">
 <span class='glyphicon glyphicon-plus'></span> Wert = @counter - Klick mich!
</ITVButton>

<ITVButton onClick="Aktion" AnimationSeconds="0" class="btn btn-warning" style="color:black" title="ohne Animation">
 <span class='glyphicon glyphicon-plus'></span> Wert = @counter - Klick mich!
</ITVButton>
<br />
<ITVButton onClick="AktionMitFehler" AnimationSeconds="1" class="btn btn-danger" style="margin-top:5px" title="mit Animation und Fehler ohne Fehlerbehandlung">
 <span class='glyphicon glyphicon-plus'></span> Wert = @counter - Klick mich!
</ITVButton>

<ITVButton onClick="AktionMitFehler" onError='async (ex)=>await Util.Alert("FEHLER: " + ex.Message)' AnimationSeconds="1" class="btn btn-danger" title="mit Animation und Fehler mit Fehlerbehandlung">
 <span class='glyphicon glyphicon-plus'></span> Wert = @counter - Klick mich!
</ITVButton>

@code
{
 int counter = 41;

 async Task Aktion()
 {
  counter++;
 }

 async Task AktionMitFehler()
 {
  await Task.Delay(500);
  throw new ApplicationException("Etwas ist falsch gelaufen!");
 }
}



